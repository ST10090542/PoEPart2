<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:padding="10dp"
    android:transitionName="@string/record_card_detail_transition_name"
    tools:context=".ui.fragments.overview.OverviewFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOverview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:elevation="15dp"
        app:cardBackgroundColor="@color/primaryDarkColor"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivOverviewImage"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:contentDescription="overview record image"
                android:scaleType="fitXY"
                android:src="@drawable/duolingo" />

            <TextView
                android:id="@+id/tvOverviewTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primaryColor"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="15dp"
                android:text="Duolingo"
                android:textColor="@color/gray"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>