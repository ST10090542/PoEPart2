<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#00BFFF"
    tools:context=".ui.fragments.daily_goals.DailyGoalsFragment">


<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Daily Goals"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etMinimum"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Minimum Hours"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:padding="8dp"
        android:inputType="number"/>


    <EditText
        android:id="@+id/etMaximum"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Maximum Hours"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:padding="8dp"
        android:inputType="number"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@android:color/white"
        android:background="#336633"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>
