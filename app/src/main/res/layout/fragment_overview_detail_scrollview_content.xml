<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor">

    <TextView
        android:id="@+id/tvOverviewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:paddingStart="45dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
        android:text="Duolingo"
        android:textColor="@color/gray"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOverviewTitle">

        <TableRow android:background="@color/gray">

            <TextView
                style="@style/table_row_text_style"
                android:text="Total time" />

            <TextView
                style="@style/table_row_text_style"
                android:layout_marginEnd="1dp"
                android:text="02:52:32" />
        </TableRow>

        <TableRow android:background="@color/gray">

            <TextView
                style="@style/table_row_text_style"
                android:text="Average" />

            <TextView
                style="@style/table_row_text_style"
                android:layout_marginEnd="1dp"
                android:text="00:32:00" />
        </TableRow>

        <TableRow android:background="@color/gray">

            <TextView
                style="@style/table_row_text_style"
                android:text="Total days" />

            <TextView
                style="@style/table_row_text_style"
                android:layout_marginEnd="1dp"
                android:text="27" />
        </TableRow>

        <TableRow android:background="@color/gray">

            <TextView
                style="@style/table_row_text_style"
                android:layout_marginBottom="1dp"
                android:text="Last record date" />

            <TextView
                style="@style/table_row_text_style"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:text="18.01.2022 16:04:40" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:paddingStart="15dp"
        android:paddingTop="25dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:text="Spent times this week"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>